doctype html
html
  head
    title= title
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")
  body(class="bg-light")
    .container.py-5
      .card.shadow-lg.rounded-4.p-4
        h1.text-center.mb-4 Add a New Pet üêæ
        form(action="/update-cobj" method="POST")
          .mb-3
            label.form-label(for="name") Pet Name
            input.form-control(type="text" id="name" name="name" placeholder="Enter pet name" required)

          .mb-3
            label.form-label(for="type") Pet Type
            input.form-control(type="text" id="type" name="type" placeholder="e.g. Dog, Cat, Parrot" required)

          .mb-3
            label.form-label(for="bio") Pet Bio
            textarea.form-control(id="bio" name="bio" rows="3" placeholder="Write something about your pet...")

          .d-flex.justify-content-between.mt-4
            a.btn.btn-outline-secondary(href="/") ‚Üê Back to List
            button.btn.btn-primary(type="submit") Save Pet
