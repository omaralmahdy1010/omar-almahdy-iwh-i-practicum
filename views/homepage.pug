doctype html
html
  head
    title= title
  body
    h1= title
    a(href="/update-cobj") Add a new Pet
    table(border="1")
      thead
        tr
          th ID
          th Name
          th Bio
          th Type
      tbody
        each record in records
          tr
            td= record.properties.pet_name
            td= record.properties.pet_bio
            td= record.properties.pet_type
